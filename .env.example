# Copy this file to .env and configure for your environment
# For development, you can use the test values provided below

# Database Configuration
# For development, use: password
# For production, use a strong randomly-generated password
DB_PASSWORD=password
DB_USERNAME=postgres
DB_HOST=db
DB_PORT=5432

# Rails Security Tokens
# For development, these are auto-generated if not provided
# For production, set these to unique, randomly-generated values using:
#   ruby -r securerandom -e 'puts SecureRandom.hex(64)'
SECRET_TOKEN=
DEVISE_PEPPER=

# Rails Environment
RAILS_ENV=development

# Email Service (SendGrid)
# Leave empty/commented to disable email functionality
SENDGRID_USERNAME=
SENDGRID_PASSWORD=

# Real-time Features (Ably)
# The Ably gem is currently disabled; uncomment in Gemfile to enable
ABLY_API_KEY=

# Monitoring Services (optional, leave empty to disable)
NEW_RELIC_LICENSE_KEY=

# Foreman Configuration (for local development with Procfile)
FOREMAN=true
